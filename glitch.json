{
  "install": "pip3 install --user -r requirements.txt",
  "start2": "PYTHONUNBUFFERED=true python3 server.py",
  "start": "gunicorn -w 3 -b 0.0.0.0:3000 server:app",
  "watch": {
    "ignore": [
      "\\.pyc$"
    ],
    "install": {
      "include": [
        "^requirements\\.txt$"
      ]
    },
    "restart": {
      "include": [
        "\\.py$",
        "^start\\.sh"
      ]
    },
    "throttle": 1000
  }
}
